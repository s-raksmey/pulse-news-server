generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ArticleStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

enum ArticleRevisionStatus {
  NONE
  REQUESTED
}

enum RevisionRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum BreakingNewsRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum NotificationType {
  SUBMISSION
  APPROVAL
  REJECTION
  PUBLICATION
  UNPUBLICATION
  ARCHIVE
  DRAFT_SAVED
  REVISION_REQUESTED
  REVISION_APPROVED
  REVISION_REJECTED
  REVISION_CONSUMED
  ACCOUNT_REQUEST
}

enum ArticleBreakingNewsRequestStatus {
  NONE
  PENDING
  APPROVED
  REJECTED
}

enum UserRole {
  ADMIN
  EDITOR
  AUTHOR
}

enum RegistrationRequestStatus {
  PENDING_VERIFICATION
  PENDING_APPROVAL
  APPROVED
  REJECTED
  EXPIRED
}

enum SettingType {
  SITE
  EMAIL
  SEO
  CONTENT
  USER_MANAGEMENT
  API
  THEME
  MAINTENANCE
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(AUTHOR)
  isActive  Boolean  @default(true)
  resetToken String?
  resetTokenExpiry DateTime?

  articles  Article[]
  revisionRequests        ArticleRevisionRequest[] @relation("RevisionRequester")
  reviewedRevisionRequests ArticleRevisionRequest[] @relation("RevisionReviewer")
  consumedRevisionRequests ArticleRevisionRequest[] @relation("RevisionConsumer")
  appliedRevisions        ArticleRevision[]        @relation("RevisionApplier")
  breakingNewsRequests         BreakingNewsRequest[]    @relation("BreakingNewsRequester")
  reviewedBreakingNewsRequests BreakingNewsRequest[]    @relation("BreakingNewsReviewer")
  breakingNewsRequestedArticles Article[]               @relation("BreakingNewsRequestedBy")

  notificationsReceived Notification[] @relation("NotificationRecipient")
  notificationsSent     Notification[] @relation("NotificationSender")

  activityLogs ActivityLog[]

  // Registration request relationships
  reviewedRegistrationRequests RegistrationRequest[] @relation("RegistrationReviewer")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RegistrationRequest {
  id                String                     @id @default(cuid())
  email             String                     @unique
  password          String                     // Hashed password
  name              String
  requestedRole     UserRole                   @default(AUTHOR)
  status            RegistrationRequestStatus  @default(PENDING_VERIFICATION)
  
  // Email verification
  verificationToken String?                    @unique
  verificationTokenExpiry DateTime?
  emailVerifiedAt   DateTime?
  
  // Admin review
  reviewedBy        String?
  reviewedAt        DateTime?
  reviewNotes       String?
  
  // Metadata
  ipAddress         String?
  userAgent         String?
  
  // Relationships
  reviewer          User?                      @relation("RegistrationReviewer", fields: [reviewedBy], references: [id])
  
  createdAt         DateTime                   @default(now())
  updatedAt         DateTime                   @updatedAt
  
  @@index([status])
  @@index([email])
  @@index([verificationToken])
}

model ActivityLog {
  id            String   @id @default(cuid())
  userId        String
  activityType  String
  details       Json?
  performedBy   String
  timestamp     DateTime @default(now())

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique

  articles  Article[]
  topics    Topic[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Topic {
  id            String   @id @default(cuid())
  slug          String
  title         String
  description   String?
  coverImageUrl String?
  coverVideoUrl String?
  isAdminCreated Boolean @default(true)

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([categoryId, slug])
}

model Tag {
  id    String @id @default(cuid())
  name  String
  slug  String @unique
  posts ArticleTag[]
}

model ArticleTag {
  article   Article @relation(fields: [articleId], references: [id])
  articleId String

  tag   Tag @relation(fields: [tagId], references: [id])
  tagId String

  @@id([articleId, tagId])
}

model Article {
  id              String        @id @default(cuid())
  title           String
  slug            String        @unique
  excerpt         String?
  contentJson     Json
  status          ArticleStatus
  topic           String?

  coverImageUrl   String?
  authorName      String?

  seoTitle        String?
  seoDescription  String?
  ogImageUrl      String?

  isFeatured      Boolean   @default(false)
  isEditorsPick   Boolean   @default(false)
  isBreaking      Boolean   @default(false)
  pinnedAt        DateTime?
  viewCount       Int       @default(0)

  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  revisionStatus       ArticleRevisionStatus @default(NONE)
  revisionRequestedAt  DateTime?
  authorEditAllowance  Int       @default(0)

  breakingNewsRequestStatus   ArticleBreakingNewsRequestStatus @default(NONE)
  breakingNewsRequestedAt     DateTime?
  breakingNewsRequestedBy     User?   @relation("BreakingNewsRequestedBy", fields: [breakingNewsRequestedById], references: [id])
  breakingNewsRequestedById   String?

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?

  author   User?   @relation(fields: [authorId], references: [id])
  authorId String?

  tags ArticleTag[]
  revisionRequests ArticleRevisionRequest[]
  revisions       ArticleRevision[]
  breakingNewsRequests BreakingNewsRequest[]

  notifications Notification[]
}

model ArticleRevisionRequest {
  id              String                @id @default(cuid())
  status          RevisionRequestStatus @default(PENDING)
  note            String?
  proposedChanges Json
  reviewComment   String?
  reviewedAt      DateTime?
  consumedAt      DateTime?

  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String

  requester   User   @relation("RevisionRequester", fields: [requesterId], references: [id])
  requesterId String

  reviewedBy   User?   @relation("RevisionReviewer", fields: [reviewedById], references: [id])
  reviewedById String?

  consumedBy   User?   @relation("RevisionConsumer", fields: [consumedById], references: [id])
  consumedById String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  revisions ArticleRevision[]

  @@index([articleId])
  @@index([status])
  @@index([createdAt])
}

model ArticleRevision {
  id        String   @id @default(cuid())
  summary   String?
  changes   Json
  appliedAt DateTime @default(now())

  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String

  revisionRequest   ArticleRevisionRequest? @relation(fields: [revisionRequestId], references: [id])
  revisionRequestId String?

  appliedBy   User   @relation("RevisionApplier", fields: [appliedById], references: [id])
  appliedById String

  @@index([articleId])
  @@index([appliedAt])
}

model Setting {
  id          String      @id @default(cuid())
  key         String      @unique
  value       Json
  type        SettingType
  label       String
  description String?
  isPublic    Boolean     @default(false) // Whether this setting can be accessed publicly
  isRequired  Boolean     @default(false) // Whether this setting is required for the system to function
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model BreakingNewsRequest {
  id              String                    @id @default(cuid())
  status          BreakingNewsRequestStatus @default(PENDING)
  reason          String?
  reviewComment   String?
  reviewedAt      DateTime?

  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String

  requester   User   @relation("BreakingNewsRequester", fields: [requesterId], references: [id])
  requesterId String

  reviewedBy   User?   @relation("BreakingNewsReviewer", fields: [reviewedById], references: [id])
  reviewedById String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([articleId])
  @@index([status])
  @@index([createdAt])
}

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String?
  metadata  Json?

  article   Article? @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId String?

  fromUser   User?  @relation("NotificationSender", fields: [fromUserId], references: [id])
  fromUserId String?

  toUser   User @relation("NotificationRecipient", fields: [toUserId], references: [id])
  toUserId String

  isRead Boolean  @default(false)
  readAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([toUserId])
  @@index([isRead])
  @@index([createdAt])
}

model AuditLog {
  id            String   @id @default(cuid())
  eventType     String   // Type of event (e.g., USER_LOGIN, ARTICLE_CREATED)
  userId        String?  // User who performed the action
  targetUserId  String?  // User affected by the action (for user management events)
  resourceId    String?  // ID of the resource affected (article, category, etc.)
  resourceType  String?  // Type of resource (Article, Category, User, etc.)
  details       Json?    // Additional event details
  ipAddress     String?  // IP address of the user
  userAgent     String?  // Browser/client user agent
  success       Boolean  @default(true) // Whether the action was successful
  errorMessage  String?  // Error message if action failed
  
  createdAt     DateTime @default(now())
  
  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@index([resourceId])
}
